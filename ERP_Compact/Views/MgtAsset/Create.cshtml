                    @Html.LabelFor(model => model.StartYear, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.StartYear, new { @class = "form-control", type = "number" })
                        @Html.ValidationMessageFor(model => model.StartYear, "", new { @class = "text-danger" })
