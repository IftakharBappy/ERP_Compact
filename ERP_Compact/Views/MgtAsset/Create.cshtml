                    @Html.LabelFor(model => model.AssetLife, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.AssetLife, new { @class = "form-control", type = "number" })
                        @Html.ValidationMessageFor(model => model.AssetLife, "", new { @class = "text-danger" })
