                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-2">
                        @Html.ActionLink("<< User List", "Index", null, new { @class = "btn btn-primary" })
                    </div>
                    <div class="col-md-offset-6 col-md-2">
                        @Html.ActionLink("Go to update", "Edit", new { id = Model.UserKey }, new { @class = "btn btn-info" })
                    </div>

                </div>
            </div>
                            }
    </div>
</div>
